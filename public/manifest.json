{
  "manifest_version": 3,
  "name": "Lock In: Block Distractions. Unlock Focus.",
  "version": "1.2",
  "description": "Block distractions, focus better, and Lock In. Choose your focus time and stay on track effortlessly.",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon16.png",
    "19": "icon19.png",
    "32": "icon32.png",
    "38": "icon38.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "declarativeNetRequest", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["Block.html", "Done.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
